# RED="\[\033[0;31m\]"
# YELLOW="\[\033[0;33m\]"
  GREEN="\[\033[0;32m\]"
  NO_COLOR="\[\033[0m\]"
  BLUE='\e[1;34m'

# PS1="$GREEN\u@\h$NO_COLOR:\w$YELLOW\$(parse_git_branch)$NO_COLOR\$ "

# Git branch in prompt.

parse_git_branch() {

    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'

}

export PS1="$BLUE\u@\h$NO_COLOR \W\[\033[32m\]\$(parse_git_branch)\[\033[00m\] $ "

